{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@pentible/tsconfig",
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "./src",
        "sourceMap": true,
        "outDir": "dist",
        "composite": false,
        "noEmit": true
    },
    "exclude": ["./dist", "./node_modules"]
}
